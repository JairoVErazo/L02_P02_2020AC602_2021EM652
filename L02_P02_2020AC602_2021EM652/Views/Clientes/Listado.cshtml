@model IEnumerable<Libro>;

<container>
    <div style="display: flex;">
        <div style="flex: 1; margin-right: 20px; font-size: 20px;">
            <h3 style="color: blue;">Libros</h3>
            <hr style="border-top: 2px solid lightgray;">
            @foreach( var libro in Model)
            {
                <div class="book-item">
                    <div class="item-info" style="display: flex; align-items: center;">
                        <div style="flex: 1;">
                            <p>@libro.Nombre </p>
                            <p style="font-size:15px;">@libro.IdAutorNavigation.Autor</p>
                        </div>
                        <span class="price" style="margin: 0 15px;">@libro.Precio</span>
                        <form method="post" asp-action="AgregarACarrito">
                            <input type="hidden" name="libro" value="@libro.Id" />
                            <button type="submit" class="btn btn-primary float-right" style="background-color: green; border: 1px solid white;">+Agregar</button>
                        </form>
                    </div>
                </div>
            }

        <div style="flex: 1;">
            <h3 style="color: blue;">Libros @(ViewBag.listaSeleccionados?.libros ?? 0)</h3>
            <h5 style="color: dimgray;">Total: @((ViewBag.listaSeleccionados?.total ?? 0)) USD</h5>
                <button> <a asp-action="Cierre" class="btn btn-primary float-right" style="background-color:skyblue; color: black; border: 5px solid white; width: 500px;">Completar</a> </button>
        </div>
    </div>

</container>

