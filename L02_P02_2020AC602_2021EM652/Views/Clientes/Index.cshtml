@model Cliente;
@{
    ViewData["Title"] = "Cliente";
}

<form asp-action="Index">
    <div class="mb-3">
        <h2>Proceso de Venta</h2>
        <h4>Datos del Cliente</h4>
        <div class="row">
            <div class="col">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" id="nombre">
            </div>
            <div class="col">
                <label asp-for="Apellido" class="form-label">Apellido</label>
                <input asp-for="Apellido" type="text" class="form-control" id="apellido">
            </div>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label asp-for="Direccion" class="form-label">Dirección</label>
        <input asp-for="Direccion" type="text" class="form-control" id="direccion">
    </div>

    <button class="btn btn-primary float-right" style="background-color:green; border: 1px solid white;">Iniciar Venta</button>
</form>

